{% extends "::base.html.twig" %}

{% block stylesheets %}
<style type="text/css">
    body {
      padding-top: 60px;
      padding-bottom: 40px;
    }
    .sidebar-nav {
      padding: 9px 0;
    }

    @media (max-width: 980px) {
      /* Enable use of floated navbar text */
      .navbar-text.pull-right {
        float: none;
        padding-left: 5px;
        padding-right: 5px;
      }
      
      #centered {          
        margin: 0 auto;          
      }  
    }
</style>
{% endblock stylesheets %}

{% block title %} Welcome {{user.getFirstName}}! {% endblock title %}
{% block navigation %}
    {{ include('::navigation.html.twig',{ 'user': user, 'roles': roles } ) }}
{% endblock navigation %}

{% block container %}

<div class="row-fluid">
    <div class = "span7" id= "centered">        
        {{ form(form) }}
    </div>
</div>
{% endblock container %}