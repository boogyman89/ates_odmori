{% extends "::base.html.twig" %}

{% block title %} Send Request! {% endblock title %}

{% block navigation %}
    {{ include('::navigation.html.twig',{ 'user': app.user, 'roles': app.user.roles } ) }}
{% endblock navigation %}

{% block container %}
    <div class="form-signin">
        <h2 class="form-signin-heading text-center">Request</h2>
        
        <input class="form-control start_date_help input-block-level" type="text" placeholder="Start date" /><br/>
        <input class="form-control end_date_help input-block-level" type="text" placeholder="End date" />

        {{ form_start(form) }}
            {{ form_errors(form) }}

         {{ form_widget(form.comment) }}

            <div class="hidden">
                {{ form_label(form.start_date) }}
                {{ form_errors(form.start_date) }}
                {{ form_widget(form.start_date) }}
            </div>

            <div class="hidden">
                {{ form_label(form.end_date) }}
                {{ form_errors(form.end_date) }}
                {{ form_widget(form.end_date) }}
            </div>


        {{ form_end(form) }}
    </div>

{% endblock container %}

{% block additionaljs %}
    {{ parent() }}
    <script>
        $(document).ready(vacationRequest.initDatepicker);
    </script>
{% endblock additionaljs %}