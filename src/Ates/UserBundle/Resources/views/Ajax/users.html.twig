<table class="table table-striped">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Edit</th>
            <th>Promote</th>
        </tr>   
    </thead>
    <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.getFirstName }}</td>
                <td>{{ user.getLastName }}</td>
                <td><a href=' {{ path('admin_edit_user',  { 'id' : user.getId() }) }}'>Edit</a></td>
                {% if user.getRoles|length == 1 %}
                    <td><a href=' {{ path('admin_promote_user',  { 'id' : user.getId() }) }}'>Promote to admin</a></td>
                {% else %}
                    <td>already admin</td>
                {% endif %}
            </tr>
        {% endfor %}
    </tbody>
</table>